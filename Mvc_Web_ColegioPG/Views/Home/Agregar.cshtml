@model Alumno
@{
    ViewData["Title"] = "Agregar Page";
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Agregar" asp-controller="Home" method="post">

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="Apellido" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Direccion">Direccion</label>
                <input class="form-control form-control-sm" asp-for="Direccion" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Telefono">Telefono</label>
                <input class="form-control form-control-sm" asp-for="Telefono" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Correo">Correo</label>
                <input class="form-control form-control-sm" asp-for="Correo" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdCursos">Cursos</label>
                <select class="form-select form-select-sm" asp-for="IdCursos">
                    <option selected disabled>-- Seleccionar --</option>
                    @foreach (var curso in ViewBag.Cursos)
                    {
                        <option value="@curso.IdCursos">@curso.Nombre</option>
                    }
                </select>
            </div>

            <div class="mb-2">
                <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>